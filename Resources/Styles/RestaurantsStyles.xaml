<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Color palette based on the uploaded image -->
    <Color x:Key="PrimaryColor">#FF4500</Color>
    <!-- Neon Orange from the text -->
    <Color x:Key="SecondaryColor">#CE783F</Color>
    <!-- Bright Yellow from the egg -->
    <Color x:Key="AccentColor">#32CD32</Color>
    <!-- Green from the vegetables -->
    <Color x:Key="BackgroundColor">#2F2928</Color>
    <Color x:Key="BackgroundColor2">#393331</Color>
    <!-- Dark background color -->
    <Color x:Key="Font2">#484240</Color>
    <Color x:Key="Font3">#5E5754</Color>
    <Color x:Key="Accent1">#994518</Color>
    <Color x:Key="Accent2">#2A2423</Color>
    <!-- Deep red from the meat -->

    <!-- Defining styles for common UI elements -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
    </Style>
    <Style TargetType="FlyoutPage">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
    </Style>
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="White" />
    </Style>
</ResourceDictionary>